<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.INSIDER" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
    </style>

    <style name="Base.Theme.MainActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowSoftInputMode">adjustNothing</item>
        <item name="colorPrimary">@color/main</item>
    </style>


    <style name="Base.Theme.LoadingActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main</item>
    </style>

    <style name="Base.Theme.SignUpActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSwitchThumbNormal">@color/black</item> <!-- 색상 설정 -->
        <item name="colorControlActivated">@color/black</item> <!-- 색상 설정 -->
    </style>

    <style name="Theme.MainActivity" parent="Base.Theme.MainActivity" />

    <style name="Theme.SignUp" parent="Base.Theme.SignUpActivity" />

    <style name="Theme.INSIDER" parent="Base.Theme.INSIDER" />

    <style name="Theme.Loading" parent="Base.Theme.LoadingActivity" />
</resources>